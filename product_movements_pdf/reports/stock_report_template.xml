<odoo>
    <template id="stock_report_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <h2>Stock Report for Product: <span t-esc="product_name"/></h2>

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Reference</th>
                                <th>Date</th>
                                <th>Qty Done</th>
                                <th>Unit Cost</th>
                                <th>Move Value</th>
                                <th>Source Location</th>
                                <th>Destination Location</th>
                                <th>Stock After Movement</th>
                                <th>Stock Value</th>
                                <th>Partner</th>
                            </tr>
                        </thead>

                        <tbody>
                            <t t-foreach="results" t-as="result">
                                <tr>
                                    <td><span t-esc="result['reference']"/></td>
                                    <td> <span t-esc="result['date']"/> </td>
                                    <td><span t-esc="'%.2f' % result['qty_done']"/></td>
                                    <td><span t-esc="result['unit_cost']"/></td>
                                    <td><span t-esc="'%.2f' % result['move_value']"/></td>
                                    <td><span t-esc="result['source_location']"/></td>
                                    <td><span t-esc="result['dest_location']"/></td>
                                    <td><span t-esc="'%.2f' % result['stock_after_movement']"/></td>
                                    <td><span t-esc="'%.2f' % result['stock_value']"/></td>
                                    <td><span t-esc="result['partner_name']"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
